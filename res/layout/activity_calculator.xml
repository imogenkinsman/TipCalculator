<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalculatorActivity" >

    <EditText
        android:id="@+id/etTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etTransaction"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="168dp"
        android:layout_marginLeft="43dp"
        android:text="@string/tip_label" />

    <TextView
        android:id="@+id/tvTipValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvTip"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/tvTip" />

    <SeekBar
        android:id="@+id/sbTipPercent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTipPercent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:max="30"
        android:progress="15" />

    <TextView
        android:id="@+id/tvTipPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTransaction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/fifteenpct_label" />

</RelativeLayout>